          <tr><td><%= label_tag "Password: " %></td>
          <td><%= password_field_tag :password, params[:password], size: 7 %><br/></td></tr>
          <tr><td><%= submit_tag "Sign In" %></td><td align="right"><%=link_to 'Sign Up', new_user_path %></td></tr>
