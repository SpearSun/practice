

<%= render partial: "common/header" %>

<div id="content">
	<div id="maintext">
		<h2>Listing articles</h2>
    
      <% @articles.each do |article| %>
        <span id="article_title"><%= link_to article.title, article_path(article) %></span>
        <p><%= article.text %></p>
        <p id="article_bottom"><%= article.user_id == nil ? "Anonymous" : article.user_id %> | <%= article.updated_at %> </p>
        <hr/>

      <% end %>

    <%= paginate @articles %>
</div>



